@model IEnumerable<MvcProjeOrnek.Models.calisanlar>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Çalışan Listesi</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.adSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.maas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departmanNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.adSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departmanNo)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.calisanNo }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.calisanNo }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
