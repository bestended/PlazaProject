@model IEnumerable<MvcProjeOrnek.Models.firmalar>

@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Firma Listesi</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
